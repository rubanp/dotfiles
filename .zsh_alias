# Useful

alias vim="nvim"

alias v="nvim"

alias ls="lsd -1 --group-dirs first"

alias lsl="lsd -1lh --group-dirs first"

alias lsa="lsd -1A --group-dirs first"

alias lsla="lsd -1Alh --group-dirs first"

function cl () {
	cd "$1" && ls;
}

function cla () {
	cd "$1" && lsa;
}

function mcd () { mkdir -p "$@" && eval cd "\"\$$#\""; }

function define() {
    dict "$1" | bat;
}

alias ..="cd .."
alias ..2="cd ../.."
alias ..3="cd ../../.."
alias ..4="cd ../../../.."
alias ..5="cd ../../../../.."

alias cwd='printf "%q\n" "$(pwd)" | tee >(pbcopy)'

# Utilities

alias rg="rg -p"

alias ranger='ranger --choosedir=$HOME/.rangerdir; LASTDIR=`cat $HOME/.rangerdir`; cd "$LASTDIR"'

alias less="less -R"

alias tree="tree -aI '.git|.DS_Store|tags'"

alias tree2="tree -L 2 | bat"
alias tree3="tree -L 3 | bat"
alias tree4="tree -L 4 | bat"

alias del="trash -F"

alias yt="youtube-dl --add-metadata -i"

alias yta="yt -x -f bestaudio/best"

# Git
alias lg="lazygit"
alias gdiff="git diff | bat"

# Dotfiles
alias vrc="vim ~/.config/nvim/init.vim"
alias zrc="vim ~/.zshrc"
alias trc="vim ~/.tmux.conf"
alias alrc="vim ~/.zsh_alias"
alias src="source ~/.zshrc"

# Settings - Directory Stack
setopt PUSHD_MINUS 		   # exchange the meanings of '+' and '-'
setopt CDABLE_VARS                 # expand the expression (allows 'cd -2/tmp')
autoload -U compinit && compinit   # load + start completion

zstyle 'completion:*:directory-stack' list-colors ${(s.:.)LS_COLORS}
